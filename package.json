{
  "name": "movement-chain-ai-docs",
  "version": "1.0.0",
  "description": "Movement Chain AI Documentation with Git Hooks",
  "scripts": {
    "prepare": "husky",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules",
    "lint:links": "markdown-link-check docs/**/*.md",
    "test:build": "mkdocs build --strict"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.0",
    "markdown-link-check": "^3.12.1",
    "markdownlint-cli": "^0.38.0"
  },
  "lint-staged": {
    "*.md": [
      "markdownlint --fix",
      "markdown-link-check"
    ]
  },
  "keywords": [
    "movement-chain",
    "documentation",
    "mkdocs"
  ],
  "author": "",
  "license": "MIT"
}
